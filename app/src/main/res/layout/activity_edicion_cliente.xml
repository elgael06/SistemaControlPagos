<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Vistas.EdicionCliente" android:visibility="visible">

    <TextView
            android:text="Edicion Cliente"
            android:layout_width="264dp"
            android:layout_height="34dp"
            android:id="@+id/textView5" android:textSize="18sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.061"
            android:textStyle="bold"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tx" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre" android:id="@+id/tx_nombre"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="464dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/tx" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/tx_direccion">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="464dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_direccion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/tx_referencia">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Referencia"/>
    </android.support.design.widget.TextInputLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/tx_telefono"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/tx_referencia"
            android:hint="Telefono" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.071" android:layout_marginStart="8dp"/>
    <CheckBox
            android:text="Estatus"
            android:layout_width="157dp"
            android:layout_height="47dp"
            android:id="@+id/checkBoxEstatus" app:layout_constraintStart_toEndOf="@+id/tx_telefono"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/tx_referencia"
            app:layout_constraintHorizontal_bias="0.468" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.071"/>
    <EditText
            android:layout_width="121dp"
            android:layout_height="60dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/tx_codigo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tx" android:layout_marginEnd="8dp"
            android:hint="Codigo" android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.888"/>
    <Button
            android:text="Crear Nuevo Cliente"
            android:layout_width="243dp"
            android:layout_height="52dp"
            android:id="@+id/bt_nuevo" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_telefono" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Editar Cliente"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_editar" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_nuevo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <Button
            android:text="Borrar Cliente"
            android:layout_width="243dp"
            android:layout_height="47dp"
            android:id="@+id/bt_borrar"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintTop_toBottomOf="@+id/bt_editar" android:layout_marginTop="12dp"/>
</android.support.constraint.ConstraintLayout>