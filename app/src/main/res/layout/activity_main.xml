<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Alta/Edicion"
            android:layout_width="119dp"
            android:layout_height="32dp"
            android:id="@+id/Ir_edicion"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Saldos"
            android:layout_width="129dp"
            android:layout_height="32dp"
            android:id="@+id/Ir_saldos"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/Ir_edicion" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Moviminetos"
            android:layout_width="126dp"
            android:layout_height="32dp"
            android:id="@+id/Ir_moviminetos"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/Ir_saldos" android:layout_marginStart="8dp"
    />
    <TextView
            android:text="Clientes"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.159" android:textSize="24sp" android:lineSpacingExtra="12sp"
            android:textAlignment="textStart" android:textStyle="bold" android:layout_marginTop="16dp"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/Ir_saldos"
            app:counterTextAppearance="@style/TextAppearance.AppCompat"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="@color/colorPrimaryDark" android:hint="Filtro Clientes"
            android:id="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/full_names"
                android:typeface="normal"
                android:textColor="@color/colorPrimary" android:textAlignment="textStart"/>
    </android.support.design.widget.TextInputLayout>
    <ImageButton
            android:layout_width="52dp"
            android:layout_height="46dp" app:srcCompat="@android:drawable/ic_search_category_default"
            android:id="@+id/imageButton2"
            style="@style/Widget.AppCompat.EditText" app:layout_constraintStart_toEndOf="@+id/textInputLayout"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/Ir_saldos"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>